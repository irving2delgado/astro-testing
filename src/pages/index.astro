<!-- index.astro -->
---
import { fetchData } from './script.js';
---

<astro-document>
    <head>
        <title>API Consumption</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <div class="container" id="apiData">
            {#await fetchData()}
                <p>Loading...</p>
            {:then data}
                <div class="person">
                    <h2>{data.name}</h2>
                    <p>Age: {data.age}</p>
                    <p>Profession: {data.profession}</p>
                </div>
            {:catch error}
                <p>Error fetching data: {error.message}</p>
            {/await}
        </div>
    </body>
</astro-document>


<style>
    /* styles.css */
.container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
}

.person {
    background-color: #f0f0f0;
    padding: 10px;
    margin-bottom: 20px;
    border-radius: 5px;
}

.person h2 {
    margin-top: 0;
}

.person p {
    margin: 5px 0;
}

</style>
