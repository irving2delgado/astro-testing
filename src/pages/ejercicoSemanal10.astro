---
const response = await fetch('https://97877a7d-e0d5-44d8-b07f-ea3e8b682164.mock.pstmn.io/ivan');
const data = await response.json();


---


<h1>Profile</h1>
<section class="grid-container">
    <h1 id="name">{data.name}</h1>
    <div class="data-point">
      <span class="label">Course: {data.course.title}</span>
      <span id="age"></span>
    </div>
    <div class="data-point">
      <span class="label">Description: {data.course.description}</span>
      <span id="gender"></span>
    </div>
    <div class="data-point">
      <span class="label">Duration: {data.course.duration}</span>
      <span id="location"></span>
    </div>
    <div class="data-point">
      <span class="label">Topics Covered: {data.course.topics_covered}</span>
      <span id="occupation"></span>
    </div>
    <div class="data-point">
      <span class="label">Instructors: {data.course.instructors[0].name}, {data.course.instructors[1].name}</span>
      <span id="hobbies"></span>
    </div>
    <div class="data-point">
      <span class="label">Prerequisites: {data.course.prerequisites}</span>
      <span id="favorite-food"></span>
    </div>
    <div class="data-point">
      <span class="label">Certification: {data.course.certification}</span>
      <span id="favorite-color"></span>
    </div>
  </section>
  
  <style>
    /* Define grid layout */
    .grid-container {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* Four equal-width columns */
    gap: 20px;
    padding: 20px;
  }

    /* Style data points */
    .data-point {
      display: flex;
      align-items: center;
    }
  
    .label {
      font-weight: bold;
      margin-right: 5px;
    }
  
    /* Style bio */
    .bio {
      grid-column: 1 / -1; /* Span all columns */
    }
  </style>